<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mycomic">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BF4444"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btbackdetail"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/back"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Chi tiết truyện"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"/>

        <ImageView
            android:id="@+id/btnAddchapLayout"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:src="@drawable/plus"
            android:layout_marginLeft="10dp" />
        <ImageView
            android:id="@+id/btnShowListChapter"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:src="@drawable/menu2"
            android:layout_marginLeft="10dp" />
        <ImageView
            android:id="@+id/btnDeleteStory"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:src="@drawable/delete"
            android:layout_marginLeft="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/btselectimgdetail"
                    android:layout_width="120dp"
                    android:layout_height="150dp"

                    android:src="@android:drawable/btn_star" />

                <ImageView
                    android:id="@+id/imgitemdetail"
                    android:layout_width="120dp"
                    android:layout_height="150dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dd"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Loại truyện: "
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/txtType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Truyện tranh"
                        android:textSize="18dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Số chương:"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/txtChapterNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="18dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Lượt xem: "
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/txtViewNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="18dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Lượt thích: "
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/txtLoveNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="18dp" />


                </LinearLayout>
                <RatingBar
                    android:id="@+id/ratingView"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progressBackgroundTint="#5A5A5A"
                    android:progressTint="#FFEB3B"
                    android:rating="0"
                    android:stepSize="0.1" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên truyện:"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/edtTitledetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="300dp"
                android:layout_height="wrap_content"

                android:textSize="18dp"
                android:text="Thể loại:" />

            <ImageView
                android:id="@+id/selectcate"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/plus" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtCate"
            android:layout_width="match_parent"
            android:textSize="18dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView99"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18dp"
                android:text="Trạng thái:" />
            <TextView
                android:id="@+id/txtTimeUpdate"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textSize="14dp"
                android:gravity=""/>
        </LinearLayout>

        <Spinner
            android:id="@+id/spnSttt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18dp"
                android:text="Hiển thị:" />

        </LinearLayout>

        <Spinner
            android:id="@+id/spnShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Giới thiệu:" />

        <EditText
            android:id="@+id/edtDescriptdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="18dp"
            android:gravity="start|top"
            android:inputType="textMultiLine" />
    </LinearLayout>

</LinearLayout>