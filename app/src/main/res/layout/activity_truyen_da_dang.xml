<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Truyen_da_dang">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#BF4444"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="10dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="Truyện của tôi"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgMenu2"
            android:layout_width="10dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:src="@drawable/menu2" />

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="60dp">

            <Button
                android:id="@+id/Truyen1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text=""
                android:layout_marginTop="40dp"/>

            <Button
                android:id="@+id/Truyen2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text=""
                android:layout_marginTop="40dp"/>

            <Button
                android:id="@+id/Truyen3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text=""
                android:layout_marginTop="40dp"/>

            <Button
                android:id="@+id/Truyen4"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text=""
                android:layout_marginTop="40dp"/>

            <Button
                android:id="@+id/Truyen5"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text=""
                android:layout_marginTop="40dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>