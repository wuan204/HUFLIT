<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:id="@+id/Relative_main">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:background="#BF4444">

            <ImageView
                android:id="@+id/btBack"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:src="@drawable/back"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/textDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="Chi tiết truyện"
                android:textStyle="bold"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/btReport"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:src="@drawable/rp1"
                android:text="Rp"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgStory"
                android:layout_width="170dp"
                android:layout_height="250dp"
                android:scaleType="fitCenter"
                android:src="@drawable/update" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
               >

                <TextView
                    android:id="@+id/txtStrName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/Blue"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtCate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    tools:text="" />

                <TextView
                    android:id="@+id/txtType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    tools:text="" />

                <RatingBar
                    android:id="@+id/ratingView"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progressBackgroundTint="#5A5A5A"
                    android:progressTint="#FFEB3B"
                    android:rating="4"
                    android:stepSize="0.1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="30dp">

                    <ImageView
                        android:id="@+id/btLove"
                        android:layout_width="10dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/h1"
                        android:text="Love" />

                    <ImageView
                        android:id="@+id/btFl"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/plus"
                        android:text="Flow" />

                    <ImageView
                        android:id="@+id/btDown"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/down"
                        android:text="Down" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout1"
        android:layout_marginTop="2dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Tác giả:"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:gravity=""/>

                <TextView
                    android:id="@+id/txtAlias"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textSize="18dp"
                    android:gravity=""/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Số chương:"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:gravity=""/>

                <TextView
                    android:id="@+id/txtChapterNumber"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textSize="18dp"
                    android:gravity=""/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Trạng thái: "
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:gravity=""/>

                <TextView
                    android:id="@+id/txtStt"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textSize="18dp"
                    android:gravity=""/>

                <TextView
                    android:id="@+id/txtTimeUpdate"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text=""
                    android:textSize="14dp"
                    android:gravity=""/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Lượt xem: "
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:gravity=""/>

                <TextView
                    android:id="@+id/txtViewNumber"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textSize="18dp"
                    android:gravity=""/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Lượt thích: "
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/txtLoveNumber"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textSize="18dp"
                    android:gravity=""/>
            </LinearLayout>

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="18dp"
                android:text="Tóm tắt truyện:"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/txtDescipt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:minHeight="48dp"
                android:text="test"
                android:textSize="18dp" />

            <Button
                android:id="@+id/btViewCmt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xem thêm bình luận" />

            <RatingBar
                android:id="@+id/addrating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:progressBackgroundTint="#5A5A5A"
                android:progressTint="#FFEB3B"
                android:rating="5"
                android:stepSize="0.5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Nhập bình luận của bạn."
                    android:inputType="text"
                    tools:ignore="TouchTargetSizeCheck" />

                <ImageView
                    android:id="@+id/btCmt"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@drawable/up"
                    android:rotation="90"
                    android:text="Gửi" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btRead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Đọc truyện" />

        <Button
            android:id="@+id/btViewChapter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Các chương" />
    </LinearLayout>


</RelativeLayout>